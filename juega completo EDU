    incognito = []
    vidas = 5
    letra = ''

    words = ("antibiotico", "arabe", "tunica", "ceramica", "oxigeno", "humanistico", "caoticos", "recondito", "zodiaco","rectangulo", "sepalo", "inequivoco", "obstaculo", "heterogeneo")
