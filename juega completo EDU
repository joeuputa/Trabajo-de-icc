                print (palabra)
                print ('Has ganado')

                print ('Fin del juego.')
                break
    return

#el juego
def ahorcado(): #el juego esta listo. eso creo?
   select = menu()
   while(select != '3'):
      if(select == '1'):
     #se dirige a la funcion de un jugador
         select = menu2()
         while (select != '4'):
             if (select == '1'):
                 easymode()
             elif (select == '2'):
                 medium()
             elif (select == '3'):
                 advance()

             select = menu2()

      elif(select == '2'):
            jugador2() # se dirige a la funcion de dos jugadores

      select = menu()

   print("adios.")

ahorcado()
