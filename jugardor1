def difficult():
    lista_palabra = []
    incognito = []
    vidas = 3
    letra = ''

    words = ("Desoxirribonucleico", "Hipopotomonstrosesquipedaliofobia", "Electrodomestico", "Paralelepipedo", "Metilendioximetanfetamina", "tu", "te", "yo", "Electrocardiograma")
